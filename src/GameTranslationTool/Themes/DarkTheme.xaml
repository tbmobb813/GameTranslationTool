<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#333333"/>
    <SolidColorBrush x:Key="ForegroundBrush"       Color="White"/>

    <SolidColorBrush x:Key="PrimaryBrush"           Color="#1E90FF"/>
    <SolidColorBrush x:Key="AccentBrush"            Color="#FF80AB"/>

    <!-- reuse the same Button style from Light -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="LightTheme.xaml"/>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
